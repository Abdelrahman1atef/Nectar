<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Nectar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Nectar" parent="Base.Theme.Nectar" />
    <style name="welcomePageStyle">
        <item name="android:background">@drawable/main_pec</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="welcomeTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">48sp</item>
    </style>
    <style name="welcomeCommentTextStyle">
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#B3FCFCFC</item>
    </style>
    <style name="GetStartedButton_welcomePage">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/get_started_button_welcome_page_bg</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
    </style>
    <style name="SignInTextStyle">
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#030303</item>
    </style>
    <style name="signInCommentTextStyle">
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/comment_color</item>
    </style>
    <style name="GoogleButton_signInPage">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/google_button_sign_in_page_bg</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
    </style>
    <style name="FacebookButton_signInPage">
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/facebook_button_sign_in_page_bg</item>
    <item name="backgroundTint">@null</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">18sp</item>
    <item name="android:fontFamily">@font/gilroy_semibold</item>
</style>
</resources>